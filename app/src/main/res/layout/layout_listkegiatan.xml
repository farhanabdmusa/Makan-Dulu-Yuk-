<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/parent_layout"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_marginBottom="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nama_kegiatan"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Kegiatan1"
            android:textColor="#000"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/jam_awal"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/strip"
                android:text="JamAwal"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/strip"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/jam_akhir"
                android:text="-"
                android:textColor="#000"
                android:textSize="17sp" />

        <TextView
            android:id="@+id/jam_akhir"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:gravity="center"
            android:text="JamAkhir"
            android:textColor="#000"
            android:textSize="17sp" />
        </LinearLayout>


</android.support.v7.widget.CardView>