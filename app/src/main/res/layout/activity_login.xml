<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@mipmap/background_login">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/logo_login"/>


    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_username"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="7dp"
        android:hint="Username"
        android:padding="10dp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_username"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:padding="10dp"
        android:hint="Password" />

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:layout_below="@id/password"
        android:background="#ff906b"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lupa_password_layout">

        <TextView
            android:id="@+id/lupa_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="left"
            android:text="Lupa Password?" />

        <TextView
            android:id="@+id/lupa_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Klik di sini"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lupa_password_layout"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <ProgressBar
    android:visibility="gone"
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" />

</LinearLayout>