<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".InputKegiatan"
    android:background="@mipmap/background_common">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="INPUT KEGIATAN"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="21sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Jenis Kegiatan"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/jenisRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/makan_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Makan"
                android:textSize="15sp"/>
            <RadioButton
                android:id="@+id/lain_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lainnya"
                android:textSize="15sp"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nama_tv"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Nama Kegiatan"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/nama_et"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Nama Kegiatan"
            android:inputType="textShortMessage"
            android:textSize="15sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tanggal_tv"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Tanggal"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/tanggal_et"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:hint="DD/MM/YYYY"
            android:inputType="textShortMessage"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/calendar_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_date_range_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mulai_tv"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Jam Mulai"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/mulai_et"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="HH:MM"
            android:inputType="textShortMessage"
            android:textSize="15sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/akhir_tv"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:text="Jam Akhir"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/akhir_et"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="HH:MM"
            android:inputType="textShortMessage"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="#edd60d"/>

        <Button
            android:id="@+id/save"
            android:layout_width="90dp"
            android:layout_marginStart="120dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="#edd60d"/>


    </LinearLayout>

</LinearLayout>