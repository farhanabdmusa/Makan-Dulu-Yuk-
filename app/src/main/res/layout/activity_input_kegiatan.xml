<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputKegiatan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/judul"
            android:layout_width="386dp"
            android:layout_height="41dp"
            android:layout_above="@+id/password"
            android:layout_marginBottom="0dp"
            android:text="INPUT KEGIATAN"
            android:textColor="#000"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nama_tv"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password"
            android:layout_marginBottom="0dp"
            android:text="Nama Kegiatan"
            android:textColor="#000" />

        <EditText
            android:id="@+id/nama_et"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:hint="kegiatan" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tanggal_tv"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="#000" />

        <EditText
            android:id="@+id/tanggal_et"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:hint="tanggal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mulai_tv"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Jam Mulai"
            android:textColor="#000" />

        <EditText
            android:id="@+id/mulai_et"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:hint="mulai" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/akhir_tv"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Jam Akhir"
            android:textColor="#000" />

        <EditText
            android:id="@+id/akhir_et"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:hint="akhir" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="SAVE" />
        <Button
            android:id="@+id/cancel"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="CANCEL" />
    </LinearLayout>

</LinearLayout>